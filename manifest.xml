<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
    <Id>your-addin-id</Id>
    <Version>1.0.0.0</Version>
    <ProviderName>Your Company Name</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>
    <DisplayName>PowerPoint Slide Controller</DisplayName>
    <Description>Control PowerPoint slides remotely via Bluetooth.</Description>

    <Hosts>
        <Host Name="Presentation"/>
    </Hosts>

    <DefaultSettings>
        <SourceLocation DefaultValue="https://yourwebapp.com/index.html"/>
    </DefaultSettings>

    <Permissions>ReadWriteDocument</Permissions>
</OfficeApp>
